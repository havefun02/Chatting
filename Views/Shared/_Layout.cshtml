<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - My MVC App</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script> <!-- jQuery -->
    <style>
        html, body {
            height: 100vh; /* Ensure the body takes full height */
        }

        body {
            display: flex; /* Use flexbox for layout */
            flex-direction: column; /* Arrange children in a column */
        }

        main {
            flex: 1; /* This will make the main content area take up the remaining space */
        }

        footer {
            padding: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #f8f9fa; /* Background color for the footer */
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light px-4">
            <a class="navbar-brand" href="#">My MVC App</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    
                    <li class="nav-item">
                        <a class="nav-link" href="Index" asp-controller="App" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="Profile" asp-controller="App" asp-action="Profile">Profile</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="Contact" asp-controller="Contact" asp-action="Index">Contact</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>


    <main role="main" class="container mt-4">
        @RenderBody() <!-- This is where the content of each view will be rendered -->
    </main>

    <footer >
        <p class="m-0">&copy; @DateTime.Now.Year - My MVC App</p>
    </footer>
   
</body>
</html>
